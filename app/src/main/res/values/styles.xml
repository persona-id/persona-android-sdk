<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Pawsona.Spot.Yellow</item>
        <item name="colorPrimaryVariant">@color/Pawsona.Text.Secondary</item>
        <item name="colorSecondary">@color/Pawsona.Text.Secondary</item>
        <item name="android:textColor">@color/Pawsona.Text.Secondary</item>
    </style>

    <!-- Use default theme from Persona. -->
    <style name="PersonaThemeDefault" parent="Persona.Inquiry.Theme"/>

    <!-- Define a custom theme to be used. Colors and text appearances can be customized. -->
    <style name="PersonaThemeCustom" parent="Persona.Inquiry.Theme">
        <item name="colorPrimary">@color/Pawsona.Spot.Lavender</item>
        <item name="colorPrimaryVariant">@color/Pawsona.Text.Secondary</item>
        <item name="colorSecondary">@color/Pawsona.Spot.Yellow</item>

        <item name="textAppearanceSubtitle1">@style/PawsonaBodyTextAppearance</item>
        <item name="textAppearanceHeadline6">@style/PawsonaTitleTextAppearance</item>
    </style>
    
    <style name="PawsonaTitleTextAppearance" parent="Persona.Text.Title">
        <item name="android:fontFamily">@font/longdrina_solid_regular</item>
        <item name="android:textColor">@color/Pawsona.Text.Primary</item>
    </style>

    <style name="PawsonaBodyTextAppearance" parent="Persona.Text.Body">
        <item name="android:fontFamily">@font/longdrina_solid_regular</item>
        <item name="android:textColor">@color/Pawsona.Text.Secondary</item>
    </style>
</resources>